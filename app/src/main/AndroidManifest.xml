<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nrc.albumoftheday">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity  android:name=".LoginActivity"/>
        <activity  android:name=".CuratedAlbumActivity"/>
        <activity  android:name=".GenreActivity"  android:label="Select a Genre"/>
        <activity  android:name=".AlbumActivity"/>
        <activity  android:name=".MenuActivity"/>
        <activity  android:name=".PlaylistActivity" android:label="Select a Playlist"/>
        <activity  android:name="com.spotify.sdk.android.authentication.LoginActivity"/>
    </application>


</manifest>